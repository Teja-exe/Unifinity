---
import Headline from '~/components/ui/Headline.astro';
import ItemGrid from '~/components/ui/ItemGrid.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Faqs as Props } from '~/types';

// Replica of FAQs
const {
  title = '',
  subtitle = '',
  tagline = '',
  items = [],
  columns = 1,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<!-- Background wrapper with proper alignment -->
<div class="w-full bg-[#eff6ff]">
  <WidgetWrapper 
    id={id} 
    isDark={isDark} 
    containerClass={`max-w-7xl mx-auto px-10 py-6 ${classes?.container ?? ''}`} 
    bg={bg}
  >
    <Headline title={title} subtitle={subtitle} tagline={tagline} />
    <ItemGrid
      items={items}
      columns={columns}
      classes={{
        container: `${columns === 1 ? 'max-w-4xl' : ''} gap-y-8 md:gap-y-12`,
        panel: 'max-w-none',
        icon: 'hidden', /* Hides icon if not needed */
        description: 'whitespace-pre-line', // Ensures new lines are respected
      }}
    />
  </WidgetWrapper>
</div>
