---
import Headline from '~/components/ui/Headline.astro';
import ItemGrid from '~/components/ui/ItemGrid.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Faqs as Props } from '~/types';

const {
  title = '',
  subtitle = '',
  tagline = '',
  items = [],
  columns = 1,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper 
  id={id} 
  isDark={isDark} 
  containerClass={`max-w-7xl mx-auto px-10 pt-2 pb-4 text-center ${classes?.container ?? ''}`} 
  bg={bg}
>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />
  <div class="w-full flex flex-col items-center">
    <ItemGrid
      items={items}
      columns={columns}
      classes={{
        container: `grid grid-cols-1 md:grid-cols-${columns} gap-2 w-full justify-center`,
        panel: 'max-w-none text-justify',  /* âœ… Justifies text for all screen sizes */
        icon: 'flex-shrink-0 mt-1 w-6 h-6 text-primary',
      }}
    />
  </div>
</WidgetWrapper>
